Install RPI Lite

sudo apt update -y
sudo apt upgrade -y
sudo apt install mc -y
sudo apt install htop -y
sudo apt install fping -y
sudo apt install gpsd -y
sudo apt install jq -y
curl -fsSL https://tailscale.com/install.sh | sh
sudo tailscale up
sudo mkdir /DASHCAM
sudo apt install ffmpeg -y

mcedit /etc/default/gpsd
  GPSD_OPTIONS="/dev/ttyACM0"
sudo gpsd /dev/serial0 -F /var/run/gpsd.sock

> /etc/systemd/system/GPS.service

[Unit]
Description = GPS Logger
Requires = systemd-user-sessions.service network.target sound.target
After = multi-user.target

[Service]
User = pi
Group = pi
Type = simple
ExecStart = /home/pi/GPS.sh
Restart = always
RestartSec = 5

[Install]
WantedBy = multi-user.target

sudo systemctl enable GPS
sudo service GPS restart


 ffmpeg -f alsa -channels 1 -i hw:3,0 -framerate 30 -video_size 1920x1080 -input_format mjpeg -i /dev/video0 -y -segment_time 00:10.000 -f segment out_%003d.mp4
